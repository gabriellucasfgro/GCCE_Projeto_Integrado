<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ComboBox?>

<GridPane alignment="CENTER" hgap="10" prefHeight="250.0" prefWidth="500.0"
          style="-fx-background-color: #434343;" vgap="10"
          xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="controle.controleAdicionarAluno">

    <HBox GridPane.rowIndex="1">
        <Label text="Nome:" textFill="WHITE">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
        <TextField fx:id="tfNome" />
    </HBox>

    <HBox GridPane.rowIndex="2" >
        <Label text="Matricula:" textFill="WHITE">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
        <TextField fx:id="tfMatricula" />
    </HBox>

    <HBox GridPane.rowIndex="3" >
        <Label text="Curso:" textFill="WHITE">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
        <ComboBox fx:id="cbCurso" />
    </HBox>

    <HBox GridPane.rowIndex="4" >
        <Label text="Turma:" textFill="WHITE" >
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
        <TextField fx:id="tfTurma" />
    </HBox>


</GridPane>
